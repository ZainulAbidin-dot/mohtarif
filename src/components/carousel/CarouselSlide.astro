---
type Props = {
  image: any;
};

const slide = Astro.props;
---

<div class="carousel__slide">
  <div class="carousel__banner" data-image={slide.image}>
    <div
      class="mx-auto flex h-full max-w-2xl flex-col justify-center gap-3 text-balance text-white"
    >
      <slot />
    </div>
  </div>
</div>

<style>
  .carousel__slide {
    flex-shrink: 0;
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .carousel__banner {
    background-image: var(--image);
    background-color: rgba(0, 0, 0, 0.5);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-blend-mode: overlay;
    width: 100%;
    height: 100%;
    position: relative;
    isolation: isolate;
  }
</style>
